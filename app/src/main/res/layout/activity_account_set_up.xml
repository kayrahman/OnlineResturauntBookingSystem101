<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ui.AccountSetUpActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/acc_set_up_image_btn"
      android:layout_height="120dp"
        android:layout_width="120dp"
        android:src="@drawable/male"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_set_up_name_et"
        android:hint="Name"
        style="@style/edittext"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/acc_set_up_image_btn"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_set_up_email_et"
        android:layout_below="@+id/acc_set_up_name_et"
        android:hint="Email"
        style="@style/edittext"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_set_up_add_et"
        android:layout_below="@+id/acc_set_up_email_et"
        android:hint="Address"
        style="@style/edittext"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acc_set_up_phone_et"
        android:layout_below="@+id/acc_set_up_add_et"
        android:hint="Phone"
        style="@style/edittext"
        />


    <Button
        android:id="@+id/acc_set_up_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_set_up_phone_et"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        style="@style/btnStyle"
        android:background="@color/colorPrimary"
        />


</RelativeLayout>




























