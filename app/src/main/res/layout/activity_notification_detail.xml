<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="mahsa.com.onlineresturauntbookingsystem.ui.NotificationDetailActivity">


    <TextView
        android:id="@+id/tv_ac_noti_hard_coded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your booking request has been approved"
        android:textSize="32sp"
        android:padding="8dp"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_ac_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ac_noti_hard_coded"
        android:padding="8dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_ac_notification_user_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your booking detail"
                android:textSize="22sp"
                android:textColor="#00bf4a"
                android:id="@+id/tv_ac_noti_booking_detail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="19sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tv_ac_noti_booking_res_name"
                android:layout_below="@+id/tv_ac_noti_booking_detail"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/tv_ac_noti_username"
            android:layout_below="@+id/tv_ac_noti_booking_res_name"
            />

        <TextView
            android:id="@+id/tv_ac_noti_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 persons"
            android:layout_below="@+id/tv_ac_noti_username"
            android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10am-10pm"
                android:layout_below="@+id/tv_ac_noti_persons"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_ac_noti_time"/>

            <TextView
                android:id="@+id/tv_ac_noti_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/09/2017"
                android:layout_below="@+id/tv_ac_noti_time"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>





















