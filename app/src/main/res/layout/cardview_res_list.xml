<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        >



        <ImageView
            android:id="@+id/cardview_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/res_photo"
            android:layout_margin="4dp"
            android:elevation="4dp"
            android:layout_weight="1"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            >

        <TextView
            android:id="@+id/cardview_res_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nook- Aloft Kuala Lumpur"
            android:textColor="#101010"
            android:fontFamily="serif"
            android:lines="1"

            />

        <TextView
            android:id="@+id/cardview_res_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_res_title"
            android:text="Malaysian"
            android:layout_marginTop="4dp"
            android:textSize="12sp"

            />

            <TextView
                android:id="@+id/cardview_res_list_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuala Lumpur"
                android:layout_below="@+id/cardview_res_type"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                />

           <TextView
               android:id="@+id/tv_cv_res_list_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="11sp"
               android:text="09:30am-09:30pm"
               android:textColor="@color/white"
               android:background="@color/colorPrimaryDark"
               android:layout_below="@+id/cardview_res_list_place"
               android:layout_marginTop="8dp"
               android:paddingLeft="4dp"
               android:paddingRight="4dp"

               />



        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>